<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article%>
      <%= form_with(model: @article, class:"shadow p-3 mb-5 bg-body rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :title, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10 ">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"%> 
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :description, class:"col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 5, class:"form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :category, class:"col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, 
            {prompt: "Please select a category"}, {multiple: true, class:"form-select shadow rounded", size: 3})%>
          </div>
        </div>

        <div class="mb-3 d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-primary "%>
        </div>

      <%end%>
    </div>
  </div>
  <div class="mb-3 d-flex justify-content-center">
    <%= link_to '[ Cancel edit and return to articles list ]', articles_path%> 
  </div>
</div>